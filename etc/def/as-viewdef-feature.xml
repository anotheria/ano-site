<view name="Features" title="Features" requiredroles="admin,developer,editor">
	<sections>
		<!-- Section Page -->
		<section title="Features" type="module">
			<module>ASFeature</module>
			<document>Feature</document>
			<filter name="AZ" field="name" />
			<elements>
				<element type="field" name="id" comparable="true">
					<decorator name="idToA">
						<rule>3</rule>
					</decorator>
				</element>
				<element type="field" name="name" comparable="default">
					<decorator name="editLink" />
				</element>
                <element type="field" name="enabled" comparable="true"/>
                <element type="field" name="obsolete" comparable="true"/>
                <element type="field" name="guards" comparable="true">
                    <decorator name="guards" />
                </element>
            </elements>
            <dialog name="Edit" title="Edit Feature">
                <elements>
                    <element type="empty" />
                    <element type="field" name="id" readonly="true" />
                    <element type="field" name="name" />
                    <element type="field" name="enabled" />
                    <element type="empty" />
                    <element type="field" name="obsolete"/>
                    <element type="empty" />
                    <element type="field" name="guards" />
                    <element type="empty" />
                    <element type="field" name="accessOperation" />
                    <element type="empty" />
                    <element type="field" name="description" />
                    <element type="list">
                        <element type="function" name="updateAndClose" />
                        <element type="function" name="updateAndStay" />
                        <element type="function" name="cancel" />
                        <element type="function" name="lock" />
                        <element type="function" name="unlock" />
                    </element>
                </elements>
            </dialog>

        </section>

        <section title="Experiments" type="module">
            <module>ASExperiment</module>
            <document>Experiment</document>
            <filter name="AZ" field="name" />
            <elements>
                <element type="field" name="id" comparable="true">
                    <decorator name="idToA">
                        <rule>3</rule>
                    </decorator>
                </element>
                <element type="field" name="name" comparable="default">
                    <decorator name="editLink" />
                </element>
                <element type="field" name="active" comparable="true"/>
                <element type="field" name="distribution" comparable="true"/>
            </elements>
            <dialog name="Edit" title="Edit Experiment">
                <elements>
                    <element type="empty" />
                    <element type="field" name="id" readonly="true" />
                    <element type="field" name="name" />
                    <element type="field" name="active" />
                    <element type="field" name="distribution"/>
                    <element type="field" name="description"/>
                    <element type="field" name="distribution1"/>
                    <element type="field" name="distribution2"/>
                    <element type="field" name="distribution3"/>
                    <element type="field" name="distribution4"/>
                    <element type="field" name="distribution5"/>
                    <element type="field" name="distribution6"/>
                    <element type="field" name="distribution7"/>
                    <element type="field" name="distribution8"/>
                    <element type="field" name="distribution9"/>
                    <element type="field" name="distribution10"/>

                    <element type="list">
                        <element type="function" name="updateAndClose" />
                        <element type="function" name="updateAndStay" />
                        <element type="function" name="cancel" />
                        <element type="function" name="lock" />
                        <element type="function" name="unlock" />
                    </element>
                </elements>
            </dialog>

        </section>
	</sections>
</view>
